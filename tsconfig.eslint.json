{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "netlify/**/*.js",
    "scripts/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "src/features/**/*",
    "src/scripts/ui.js"
  ]
}
