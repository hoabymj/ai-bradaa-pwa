{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Only type libraries that actually come from @types */
    "types": ["node", "jest", "react", "react-dom"],

    /* If you previously added "typeRoots", remove it.
       Default resolution will pick up @types automatically. */

    "baseUrl": "src",
    "paths": {
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@i18n/*": ["i18n/*"]
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "service-worker.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "build", "dist", "coverage", "src/features/**/*", "__tests__/**/*", "src/**/__tests__/**/*", "src/**/__mocks__/**/*", "__mocks__/**/*"]
}